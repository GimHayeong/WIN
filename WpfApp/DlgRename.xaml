<Window x:Class="WpfApp.DlgRename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="파일 이름 바꾸기" Height="130" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <Label Margin="10,5,10,0">새로운 이름을 입력하세요.</Label>
        <TextBox x:Name="tbxNewName" Margin="15,0,15,20"/>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="btnCancel" Width="50" Margin="15,0,5,0">취소</Button>
            <Button x:Name="btnOK" Width="50" Click="Button_Click">확인</Button>
        </StackPanel>
    </StackPanel>
</Window>
