<Window x:Class="WpfAppNetClient.TimeClientWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNetClient"
        mc:Ignorable="d"
        Title="타임 클라이언트" Height="300" Width="300">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="타입서버 접속시간:" HorizontalAlignment="Left"/>
        <TextBox x:Name="tbxCurrentTime" MinWidth="150" Padding="5" Margin="5" />
        <Label Content="타임서버 아이피:" HorizontalAlignment="Left" Margin="0,20,0,0"/>
        <TextBox x:Name="tbxTimeServerIP" MinWidth="200" Padding="5" Margin="5"/>
        <Button x:Name="btnConnect" Content="접속" Padding="5" Margin="5" Click="Button_Click"/>

    </StackPanel>
</Window>
