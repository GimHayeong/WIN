<Window x:Class="WpfAppNetwork.TimeServerWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNetwork"
        mc:Ignorable="d"
        Title="타임 서버" Height="300" Width="300">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button x:Name="btnStart" Margin="5" Padding="10,5" Content="타임 서버 시작" Click="Button_Click"/>
        <Button x:Name="btnStop" Margin="5" Padding="10,5" Content="타임 서버 종료" Click="Button_Click"/>
    </StackPanel>
</Window>
